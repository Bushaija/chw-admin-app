{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/auth/register/page.jsx", "src/app/auth/login/page.jsx", "src/app/(dashboard)/admin/page.jsx", "src/components/UserCard.jsx", "src/app/(dashboard)/(list)/request/page.jsx", "src/app/(dashboard)/(list)/inventory/page.tsx", "src/app/(dashboard)/(list)/stock/page.jsx", "src/app/(dashboard)/(list)/predictions/page.jsx"],
  "exclude": ["node_modules"]
}
